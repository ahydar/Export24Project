<mah:MetroWindow
       
        x:Class="WPFExportSolution.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFExportSolution"
        mc:Ignorable="d"
        Title="Main Window" Height="300" Width="600">
    <Grid>

        <Button x:Name="DatabaseButton" Content="Database Credentials" Click="DbConnection" Height ="50" Width="147" Margin="34,110,412.6,110.4"/>
        <Button x:Name="SharedFolderButton" Content="Shared Folder Credentials" Height ="50" Width="170" Click="SharedFolderConnection" Margin="210,110,213.6,110.4"/>
        <Button x:Name="ExportButton" Content="Begin Export" Click="BeginExport" Height ="50" Width="147" Margin="413,110,33.6,110.4"/>
        <TextBlock HorizontalAlignment="Left" Margin="34,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="74" Width="491"><Run Text="Enter database and shared folder credentials. "/><LineBreak/><Run Text="Green indicates that you are connected and red indicates no connection."/></TextBlock>

    </Grid>
</mah:MetroWindow>
